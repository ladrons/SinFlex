@model TicketVM
@{
    ViewData["Title"] = "ListTickets";
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListTickets</title>
</head>

<body>
    <div>
        <div class="titleAndLabel">
            <h2>Bilet Listesi</h2>
            <label>Bu sayfa ile sistemdeki bütün biletleri görebilir, güncelleyebilir, silebilirsiniz.</label>
        </div>
        <div>
            <h5 class="successMessage">@TempData["ProcessCompleted"]</h5>
        </div>
    </div>

    <div class="container">
        <table class="table" style="text-align:center">
            <thead>
                <tr>
                    <th scope="col">Bilet Adı</th>
                    <th scope="col">Bilet Türü</th>
                    <th scope="col">Bilet Birim Fiyatı</th>
                    <th colspan="2">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Tickets)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Type</td>
                        <td>@item.Price₺</td>
                        <td><a asp-controller="Ticket" asp-action="UpdateTicket" asp-route-id="@item.ID" class="btn btn-outline-warning">Bileti Güncelle</a></td>
                        <td><a asp-controller="Saloon" asp-action="Null" asp-route-id="@item.ID" class="btn btn-outline-danger">Bileti Kaldır</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>